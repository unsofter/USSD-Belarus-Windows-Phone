<UserControl x:Class="USSDManager.AdvTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="72" d:DesignWidth="456">
    
    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <StackPanel>
            <Grid>
                <TextBox x:Name="tbMain" GotFocus="tbMain_GotFocus" LostFocus="tbMain_LostFocus" TextChanged="tbMain_TextChanged"></TextBox>
                <Button x:Name="bClear" Foreground="Black"  HorizontalAlignment="Right" BorderThickness="0" Content="&#xE10A;" Visibility="Collapsed" FontFamily="Segoe UI Symbol" Click="bClear_Click"></Button>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>